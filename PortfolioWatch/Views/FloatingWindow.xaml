<Window x:Class="PortfolioWatch.Views.FloatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PortfolioWatch" Height="60" Width="60"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Border CornerRadius="30" Background="#01000000" BorderBrush="Transparent" BorderThickness="0"
                MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Reset" Click="Reset_Click"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            <Image Source="/pyramid.png" Stretch="Uniform" Margin="0" Opacity="0.9"/>
        </Border>
    </Grid>
</Window>
