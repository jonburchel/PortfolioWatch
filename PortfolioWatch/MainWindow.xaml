<Window x:Class="PortfolioWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PortfolioWatch.ViewModels"
        xmlns:models="clr-namespace:PortfolioWatch.Models"
        xmlns:converters="clr-namespace:PortfolioWatch.Converters"
        xmlns:helpers="clr-namespace:PortfolioWatch.Helpers"
        mc:Ignorable="d"
        Title="Portfolio Watchlist" Height="600" Width="450"
        MinHeight="200" MinWidth="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="CanResize"
        Icon="/pyramid.png">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <helpers:BindingProxy x:Key="Proxy" Data="{Binding}"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="TooltipTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <converters:DoubleToVisibilityConverter x:Key="DoubleToVis"/>
        <converters:InverseDoubleToVisibilityConverter x:Key="InverseDoubleToVis"/>
        <converters:SparklineConverter x:Key="SparklineConverter"/>
        <converters:SparklineBaselineConverter x:Key="SparklineBaselineConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter"/>
        <converters:PieSliceConverter x:Key="PieSliceConverter"/>
        <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:NewsItemBorderConverter x:Key="NewsItemBorderConverter"/>
        <converters:NewsItemSpacingConverter x:Key="NewsItemSpacingConverter"/>

        <Style x:Key="RangeRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="4,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Grid.IsSharedSizeScope="True">
        <!-- Background Layer -->
        <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" Margin="5" Opacity="{Binding WindowOpacity}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
        </Border>

        <!-- Content Layer -->
        <Border Background="Transparent" CornerRadius="12" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1" Margin="5" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="15,15,15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Text="{Binding WindowTitle, UpdateSourceTrigger=LostFocus}" 
                         FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryForegroundBrush}" 
                         VerticalAlignment="Center" HorizontalAlignment="Left"
                         Background="Transparent" BorderThickness="0"
                         CaretBrush="{DynamicResource PrimaryForegroundBrush}"
                         KeyDown="TitleTextBox_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="3" Padding="2">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource TextBoxFocusedBackgroundBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource TextBoxMouseOverBackgroundBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="1" Command="{Binding RefreshCommand}" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Refresh"
                        Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="14" Height="14" Stretch="Uniform"/>
                </Button>

                <Button x:Name="MenuButton" Grid.Column="2" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Menu" Click="MenuButton_Click"
                        Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="14" Height="14" Stretch="Uniform"/>
                </Button>
                
                <Button Grid.Column="3" Content="✕" Background="Transparent" Foreground="{DynamicResource TertiaryForegroundBrush}" BorderThickness="0" Click="CloseButton_Click" FontSize="14" VerticalAlignment="Center"/>
            </Grid>

            <!-- Portfolio Summary -->
            <Grid Grid.Row="1" Margin="15,0,15,10" Visibility="{Binding IsPortfolioMode, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Total Value" Foreground="{DynamicResource TertiaryForegroundBrush}" FontSize="11"/>
                    <TextBlock Text="{Binding TotalPortfolioValue, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="24" FontWeight="Bold"/>
                </StackPanel>

                <!-- Portfolio Graph -->
                <Grid Grid.Column="1" Margin="20,0" VerticalAlignment="Center" Height="30" Background="Transparent"
                      MouseMove="Graph_MouseMove" MouseLeave="Graph_MouseLeave">
                    <Path Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill" IsHitTestVisible="False">
                        <Path.Data>
                            <MultiBinding Converter="{StaticResource SparklineBaselineConverter}">
                                <Binding Path="PortfolioHistory"/>
                                <Binding Path="PortfolioPreviousClose"/>
                            </MultiBinding>
                        </Path.Data>
                    </Path>
                    <Path StrokeThickness="2" Stretch="Fill" IsHitTestVisible="False">
                        <Path.Data>
                            <MultiBinding Converter="{StaticResource SparklineConverter}">
                                <Binding Path="PortfolioHistory"/>
                                <Binding Path="PortfolioDayProgress"/>
                                <Binding Path="PortfolioPreviousClose"/>
                            </MultiBinding>
                        </Path.Data>
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Stroke" Value="{DynamicResource NegativeColorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioUp}" Value="True">
                                        <Setter Property="Stroke" Value="{DynamicResource PositiveColorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Grid>

                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding TotalPortfolioChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" 
                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioUp}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding TotalPortfolioChange, StringFormat={}{0:+$#,##0.00;-$#,##0.00;$0.00}}" 
                               FontSize="11" HorizontalAlignment="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioUp}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Sorting & Indexes Toggle -->
            <Grid Grid.Row="2" Margin="15,0,15,5">
                <!-- Range Selector -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <RadioButton Content="1D" Command="{Binding SetRangeCommand}" CommandParameter="1d" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=1d, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="5D" Command="{Binding SetRangeCommand}" CommandParameter="5d" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=5d, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="30D" Command="{Binding SetRangeCommand}" CommandParameter="1mo" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=1mo, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="1Y" Command="{Binding SetRangeCommand}" CommandParameter="1y" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=1y, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="5Y" Command="{Binding SetRangeCommand}" CommandParameter="5y" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=5y, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="10Y" Command="{Binding SetRangeCommand}" CommandParameter="10y" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=10y, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0" ToolTip="Toggle Portfolio Mode">
                        <TextBlock Text="Portfolio" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPortfolioMode}" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <ToggleButton IsChecked="{Binding IsPortfolioMode}" Style="{StaticResource ToggleSwitchStyle}"/>
                    </StackPanel>

                    <ToggleButton IsChecked="{Binding IsIndexesVisible}" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Indexes"/>
                                    <Path x:Name="Arrow" Data="M0,0 L4,4 L8,0" Stroke="{DynamicResource SecondaryForegroundBrush}" StrokeThickness="1" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Arrow" Property="Data" Value="M0,4 L4,0 L8,4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                </StackPanel>
            </Grid>

            <!-- List Area -->
            <ScrollViewer x:Name="MainScrollViewer" Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10,0">
                <StackPanel>
                    <!-- Indexes List -->
                    <ListView ItemsSource="{Binding Indexes}" 
                              Visibility="{Binding IsIndexesVisible, Converter={StaticResource BoolToVis}}"
                              Background="Transparent" BorderThickness="0" 
                              ItemContainerStyle="{StaticResource StockItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              BorderBrush="Transparent"
                              PreviewMouseWheel="ListView_PreviewMouseWheel">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Stock}">
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- No Delete Button for Indexes -->
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="80">
                                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="14"/>
                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9" TextTrimming="CharacterEllipsis" MaxWidth="120"/>
                                    </StackPanel>

                                    <!-- Center Column (Sparkline) -->
                                    <Grid Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center" Height="20" Background="Transparent"
                                          MouseMove="Graph_MouseMove" MouseLeave="Graph_MouseLeave">
                                        <Path Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill" IsHitTestVisible="False">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource SparklineBaselineConverter}">
                                                    <Binding Path="History"/>
                                                    <Binding Path="PreviousClose"/>
                                                </MultiBinding>
                                            </Path.Data>
                                        </Path>
                                        <Path StrokeThickness="1.5" Stretch="Fill" IsHitTestVisible="False">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource SparklineConverter}">
                                                    <Binding Path="History"/>
                                                    <Binding Path="DayProgress"/>
                                                    <Binding Path="PreviousClose"/>
                                                </MultiBinding>
                                            </Path.Data>
                                            <Path.Style>
                                                <Style TargetType="Path">
                                                    <Setter Property="Stroke" Value="{DynamicResource NegativeColorBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                            <Setter Property="Stroke" Value="{DynamicResource PositiveColorBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Path.Style>
                                        </Path>
                                    </Grid>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border CornerRadius="3" Padding="3,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource NegativeBackgroundBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource PositiveBackgroundBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                    <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource SeparatorBrush}" Margin="5,5,5,5" 
                            Visibility="{Binding IsIndexesVisible, Converter={StaticResource BoolToVis}}"/>

                    <!-- Headers -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                        </Grid.ColumnDefinitions>

                        <!-- Symbol/Name Headers -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                            <Button Command="{Binding SortBySymbolCommand}" Background="Transparent" BorderThickness="0" Margin="0,0,5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Symbol" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                    <TextBlock Text="{Binding SymbolSortIcon}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding SortByNameCommand}" Background="Transparent" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Name" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                    <TextBlock Text="{Binding NameSortIcon}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Center Column Headers -->
                        <Grid Grid.Column="2" Margin="0,0,10,0" Visibility="{Binding IsPortfolioMode, Converter={StaticResource BoolToVis}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="DayChangeColumn"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="1" Text="Shares" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" HorizontalAlignment="Right" TextAlignment="Right" Width="60" Margin="10,0,15,0"/>
                            
                            <Button Grid.Column="2" Command="{Binding SortByMarketValueCommand}" Background="Transparent" BorderThickness="0" Margin="10,0,15,0" HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Value" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                    <TextBlock Text="{Binding MarketValueSortIcon}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="3" Command="{Binding SortByDayChangeValueCommand}" Background="Transparent" BorderThickness="0" Margin="10,0,15,0" HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DayChangeLabel}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                    <TextBlock Text="{Binding DayChangeValueSortIcon}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Price/Change Headers -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding SortByChangeCommand}" Background="Transparent" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ChangePercentLabel}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                    <TextBlock Text="{Binding ChangeSortIcon}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Stocks List -->
                    <ListView ItemsSource="{Binding Stocks}" 
                              Background="Transparent" BorderThickness="0" 
                              ItemContainerStyle="{StaticResource StockItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              BorderBrush="Transparent"
                              PreviewMouseWheel="ListView_PreviewMouseWheel">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Stock}">
                                <Grid Background="Transparent">
                                    <Grid.InputBindings>
                                        <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenStockCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                    </Grid.InputBindings>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Delete Button -->
                                    <Button Command="{Binding DataContext.RemoveStockCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0" Opacity="0" x:Name="DeleteBtn"
                                            VerticalAlignment="Center" HorizontalAlignment="Center" Width="16" Height="16"
                                            Margin="-2,0,0,0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource DeleteButtonHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="✕" Foreground="{DynamicResource NegativeColorBrush}" FontSize="9" FontWeight="Bold"/>
                                    </Button>

                                    <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="80">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="14"/>
                                                
                                                <!-- Earnings Flag -->
                                                <Grid Margin="5,0,0,0" Visibility="{Binding HasEarningsFlag, Converter={StaticResource BoolToVis}}" 
                                                      ToolTip="{Binding EarningsMessage}" Background="Transparent" Cursor="Hand"
                                                      MouseEnter="EarningsFlag_MouseEnter" MouseLeave="EarningsFlag_MouseLeave"
                                                      MouseLeftButtonDown="EarningsFlag_MouseLeftButtonDown">
                                                    <Path Data="M14.4,6L14,4H5V21H7V14H12.6L13,16H20V6H14.4Z" 
                                                          Fill="{Binding EarningsFlagColor}" 
                                                          Width="10" Height="10" Stretch="Uniform" VerticalAlignment="Center"/>
                                                </Grid>

                                                <!-- News Flag -->
                                                <Grid Margin="5,0,0,0" Visibility="{Binding HasNewsFlag, Converter={StaticResource BoolToVis}}" 
                                                      Background="Transparent" Cursor="Hand"
                                                      MouseEnter="NewsFlag_MouseEnter" MouseLeave="NewsFlag_MouseLeave"
                                                      MouseLeftButtonDown="NewsFlag_MouseLeftButtonDown">
                                                    <Path Data="M14.4,6L14,4H5V21H7V14H12.6L13,16H20V6H14.4Z" 
                                                          Fill="#808080" 
                                                          Width="10" Height="10" Stretch="Uniform" VerticalAlignment="Center"/>
                                                </Grid>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Name}" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9" TextTrimming="CharacterEllipsis" MaxWidth="120"/>
                                        </StackPanel>
                                        
                                        <!-- Pie Chart -->
                                        <Grid Grid.Column="1" Width="22" Height="22" Margin="5,0,0,0" 
                                              Visibility="{Binding Shares, Converter={StaticResource DoubleToVis}}"
                                              MouseEnter="Pie_MouseEnter" MouseLeave="Pie_MouseLeave" Background="Transparent">
                                            <Ellipse Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                     Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" />
                                            <Path Fill="{DynamicResource PositiveColorBrush}" Data="{Binding PortfolioPercentage, Converter={StaticResource PieSliceConverter}}" />
                                        </Grid>
                                    </Grid>

                                    <!-- Center Column (Sparkline or Portfolio Data) -->
                                    <Grid Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Sparkline Graph -->
                                        <Grid Grid.Column="0" Height="20" Background="Transparent"
                                              MouseMove="Graph_MouseMove" MouseLeave="Graph_MouseLeave">
                                            <Path Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill" IsHitTestVisible="False">
                                                <Path.Data>
                                                    <MultiBinding Converter="{StaticResource SparklineBaselineConverter}">
                                                        <Binding Path="History"/>
                                                        <Binding Path="PreviousClose"/>
                                                    </MultiBinding>
                                                </Path.Data>
                                            </Path>
                                            <Path StrokeThickness="1.5" Stretch="Fill" IsHitTestVisible="False">
                                                <Path.Data>
                                                    <MultiBinding Converter="{StaticResource SparklineConverter}">
                                                        <Binding Path="History"/>
                                                        <Binding Path="DayProgress"/>
                                                        <Binding Path="PreviousClose"/>
                                                    </MultiBinding>
                                                </Path.Data>
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Stroke" Value="{DynamicResource NegativeColorBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Stroke" Value="{DynamicResource PositiveColorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Grid>

                                        <!-- Portfolio Data -->
                                        <Grid Grid.Column="1" Visibility="{Binding DataContext.IsPortfolioMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                                                <ColumnDefinition Width="Auto" SharedSizeGroup="DayChangeColumn"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Shares Input -->
                                            <Grid Grid.Column="0" Width="60" Margin="10,0,0,0">
                                                <TextBox x:Name="SharesBox"
                                                         Text="{Binding Shares, Converter={StaticResource ZeroToEmptyStringConverter}, ConverterParameter='#,##0.###', UpdateSourceTrigger=LostFocus}"
                                                         Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}" BorderThickness="0"
                                                         HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                                                         Padding="2"
                                                         KeyDown="SharesBox_KeyDown">
                                                    <TextBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="3"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                                
                                                <!-- Overlay Button for "+" -->
                                                <Button Content="+" Background="Transparent" Foreground="{DynamicResource TertiaryForegroundBrush}" BorderThickness="0"
                                                        IsHitTestVisible="False" FontSize="16" FontWeight="Bold">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Visibility" Value="{Binding Shares, Converter={StaticResource InverseDoubleToVis}}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ElementName=SharesBox, Path=IsFocused}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>

                                            <!-- Market Value -->
                                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="{Binding MarketValue, StringFormat=C2}" 
                                                       Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                                            <!-- Day Change Value -->
                                            <TextBlock Grid.Column="2" Margin="10,0,0,0" Text="{Binding DayChangeValue, StringFormat={}{0:+$#,##0.00;-$#,##0.00;$0.00}}" 
                                                       FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Grid>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border CornerRadius="3" Padding="3,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource NegativeBackgroundBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource PositiveBackgroundBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#,##0.00;-#,##0.00;0.00}%}" FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                    <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsMouseOver}" Value="True">
                                        <Setter TargetName="DeleteBtn" Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>

            <!-- Pinning Tooltip -->
            <Popup x:Name="PinningTooltip" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="8,4" Margin="0,5,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="Window Pinned" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="12"/>
                </Border>
            </Popup>

            <!-- Graph Tooltip -->
            <Popup x:Name="GraphTooltip" Placement="Mouse" StaysOpen="True" AllowsTransparency="True" IsHitTestVisible="False">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6,3" Margin="10,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TooltipPrice" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" Margin="0,0,5,0" Style="{StaticResource TooltipTextStyle}"/>
                            <TextBlock x:Name="TooltipPercent" FontWeight="Bold" Style="{StaticResource TooltipTextStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="TooltipTime" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="10" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Pie Tooltip -->
            <Popup x:Name="PieTooltip" Placement="Mouse" StaysOpen="True" AllowsTransparency="True" IsHitTestVisible="False">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6,3" Margin="10,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock x:Name="PieTooltipText" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="12"/>
                </Border>
            </Popup>

            <!-- News Popup -->
            <Popup x:Name="NewsPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="NewsPopup_MouseEnter" MouseLeave="NewsPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="6" Margin="10,0,0,0" MaxWidth="320">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <ItemsControl ItemsSource="{Binding NewsItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource SeparatorBrush}">
                                    <Border.Margin>
                                        <MultiBinding Converter="{StaticResource NewsItemSpacingConverter}">
                                            <Binding Path="."/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Border.Margin>
                                    <Border.Padding>
                                        <MultiBinding Converter="{StaticResource NewsItemSpacingConverter}">
                                            <Binding Path="."/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Border.Padding>
                                    <Border.BorderThickness>
                                        <MultiBinding Converter="{StaticResource NewsItemBorderConverter}">
                                            <Binding Path="."/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Border.BorderThickness>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Image -->
                                        <Border Grid.Column="0" Width="60" Height="60" CornerRadius="4" Margin="0,0,8,0" 
                                                Visibility="{Binding ImageUrl, Converter={StaticResource StringToVisibilityConverter}}">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ImageSource}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Title -->
                                            <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap" FontSize="12" Margin="0,0,0,2"
                                                       Foreground="{DynamicResource PrimaryForegroundBrush}"/>

                                            <!-- Source -->
                                            <TextBlock Grid.Row="1" Text="{Binding Source}" HorizontalAlignment="Right" FontSize="9" 
                                                       Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="0,2,0,0"/>
                                        </Grid>
                                        
                                        <!-- Click Area -->
                                        <Grid Grid.ColumnSpan="2" Background="Transparent" Cursor="Hand">
                                            <Grid.InputBindings>
                                                <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenNewsCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Url}"/>
                                            </Grid.InputBindings>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Popup>

            <!-- Earnings Popup -->
            <Popup x:Name="EarningsPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="EarningsPopup_MouseEnter" MouseLeave="EarningsPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10" Margin="10,0,0,0" MaxWidth="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <TextBlock Text="{Binding EarningsMessage}" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                </Border>
            </Popup>

            <!-- Footer with Status Bar and Add Stock -->
            <Grid Grid.Row="4" Margin="15,3,15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Status Bar -->
                    <TextBlock Grid.Row="0" Text="{Binding StatusMessage}" 
                             Foreground="{DynamicResource TertiaryForegroundBrush}" 
                             FontSize="10" Margin="0,0,0,5"
                             TextTrimming="CharacterEllipsis"/>

                    <!-- Add Stock UI -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="SearchBox" Text="{Binding NewSymbol, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="{DynamicResource SearchBoxBackgroundBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}" BorderThickness="0" Padding="5" 
                                 VerticalContentAlignment="Center" Tag="Add Symbol..."/>
                        
                        <Popup IsOpen="{Binding IsSearchPopupOpen}" PlacementTarget="{Binding ElementName=SearchBox}" 
                               StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                            <Border Background="{DynamicResource SearchPopupBackgroundBrush}" BorderBrush="{DynamicResource SearchPopupBorderBrush}" BorderThickness="1" CornerRadius="4" MaxHeight="200" Width="{Binding ElementName=SearchBox, Path=ActualWidth}">
                                <ListView ItemsSource="{Binding SearchResults}" Background="Transparent" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding DisplayText}" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                                                    
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" 
                                                                Visibility="{Binding Price, Converter={StaticResource DoubleToVis}}">
                                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" FontWeight="Bold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                            <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border Background="{TemplateBinding Background}" Padding="2">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource ControlMouseOverBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Border>
                        </Popup>

                        <Button Grid.Column="1" Command="{Binding AddStockCommand}" Content="+" 
                                Background="{DynamicResource ControlBorderBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}" BorderThickness="0" Width="30" Margin="5,0,0,0"/>
                    </Grid>
                </Grid>
            </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
