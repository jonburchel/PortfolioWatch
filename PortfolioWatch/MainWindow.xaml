<Window x:Class="PortfolioWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PortfolioWatch.ViewModels"
        xmlns:models="clr-namespace:PortfolioWatch.Models"
        xmlns:converters="clr-namespace:PortfolioWatch.Converters"
        mc:Ignorable="d"
        Title="Portfolio Watchlist" Height="600" Width="450"
        MinHeight="200" MinWidth="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="CanResize"
        Icon="/pyramid.png">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:DoubleToVisibilityConverter x:Key="DoubleToVis"/>
        <converters:InverseDoubleToVisibilityConverter x:Key="InverseDoubleToVis"/>
        <converters:SparklineConverter x:Key="SparklineConverter"/>
        <converters:SparklineBaselineConverter x:Key="SparklineBaselineConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter"/>
        
        <Style x:Key="StockItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="#E6252525"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Margin="0,2" Padding="8,4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6353535"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Scrollbar Theme -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle" Background="#505050" CornerRadius="4" Height="{TemplateBinding Height}" SnapsToDevicePixels="True" Width="{TemplateBinding Width}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="rectangle" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent" Height="14" Width="26">
                            <Border x:Name="Track" Background="#404040" CornerRadius="7" BorderThickness="0"/>
                            <Ellipse x:Name="Thumb" Fill="#A0A0A0" Width="10" Height="10" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#007ACC"/>
                                <Setter TargetName="Thumb" Property="Fill" Value="White"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Grid.IsSharedSizeScope="True">
        <Border Background="#CC1E1E1E" CornerRadius="12" BorderBrush="#404040" BorderThickness="1" Margin="5" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="15,15,15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Text="{Binding WindowTitle, UpdateSourceTrigger=LostFocus}" 
                         FontSize="20" FontWeight="SemiBold" Foreground="White" 
                         VerticalAlignment="Center" HorizontalAlignment="Left"
                         Background="Transparent" BorderThickness="0"
                         CaretBrush="White"
                         KeyDown="TitleTextBox_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="3" Padding="2">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#404040"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#20404040"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="1" Command="{Binding RefreshCommand}" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Refresh">
                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                          Fill="#A0A0A0" Width="14" Height="14" Stretch="Uniform"/>
                </Button>
                
                <Button Grid.Column="2" Content="✕" Background="Transparent" Foreground="#808080" BorderThickness="0" Click="CloseButton_Click" FontSize="14" VerticalAlignment="Center"/>
            </Grid>

            <!-- Portfolio Summary -->
            <Grid Grid.Row="1" Margin="15,0,15,10" Visibility="{Binding IsPortfolioMode, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Total Value" Foreground="#808080" FontSize="11"/>
                    <TextBlock Text="{Binding TotalPortfolioValue, StringFormat=C2}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding TotalPortfolioChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" 
                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#FF4D4D"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioUp}" Value="True">
                                        <Setter Property="Foreground" Value="#00CC6A"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding TotalPortfolioChange, StringFormat={}{0:+#.00;-#.00;0.00}}" 
                               Foreground="#808080" FontSize="11" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>

            <!-- Sorting & Indexes Toggle -->
            <Grid Grid.Row="2" Margin="15,0,15,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0" ToolTip="Toggle Portfolio Mode">
                        <TextBlock Text="Portfolio" Foreground="#C0C0C0" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPortfolioMode}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <ToggleButton IsChecked="{Binding IsPortfolioMode}" Style="{StaticResource ToggleSwitchStyle}"/>
                    </StackPanel>

                    <ToggleButton IsChecked="{Binding IsIndexesVisible}" Background="Transparent" BorderThickness="0" Foreground="#A0A0A0" FontSize="11">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Indexes"/>
                                    <Path x:Name="Arrow" Data="M0,0 L4,4 L8,0" Stroke="#A0A0A0" StrokeThickness="1" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Arrow" Property="Data" Value="M0,4 L4,0 L8,4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                </StackPanel>
            </Grid>

            <!-- List Area -->
            <ScrollViewer x:Name="MainScrollViewer" Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10,0">
                <StackPanel>
                    <!-- Indexes List -->
                    <ListView ItemsSource="{Binding Indexes}" 
                              Visibility="{Binding IsIndexesVisible, Converter={StaticResource BoolToVis}}"
                              Background="Transparent" BorderThickness="0" 
                              ItemContainerStyle="{StaticResource StockItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              BorderBrush="Transparent"
                              PreviewMouseWheel="ListView_PreviewMouseWheel">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Stock}">
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- No Delete Button for Indexes -->
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="80">
                                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                        <TextBlock Text="{Binding Name}" Foreground="#A0A0A0" FontSize="11" TextTrimming="CharacterEllipsis" MaxWidth="120"/>
                                    </StackPanel>

                                    <!-- Center Column (Sparkline) -->
                                    <Grid Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center" Height="20">
                                        <Path Data="{Binding History, Converter={StaticResource SparklineBaselineConverter}}"
                                              Stroke="#40FFFFFF" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill"/>
                                        <Path StrokeThickness="1.5" Stretch="Fill">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource SparklineConverter}">
                                                    <Binding Path="History"/>
                                                    <Binding Path="DayProgress"/>
                                                </MultiBinding>
                                            </Path.Data>
                                            <Path.Style>
                                                <Style TargetType="Path">
                                                    <Setter Property="Stroke" Value="#FF4D4D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                            <Setter Property="Stroke" Value="#00CC6A"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Path.Style>
                                        </Path>
                                    </Grid>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border CornerRadius="3" Padding="3,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#30FF4D4D"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Background" Value="#3000CC6A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#FF4D4D"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                    <Setter Property="Foreground" Value="#00CC6A"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Separator -->
                    <Border Height="1" Background="#404040" Margin="5,5,5,5" 
                            Visibility="{Binding IsIndexesVisible, Converter={StaticResource BoolToVis}}"/>

                    <!-- Headers -->
                    <Grid Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                        </Grid.ColumnDefinitions>

                        <!-- Symbol/Name Headers -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                            <Button Command="{Binding SortBySymbolCommand}" Background="Transparent" BorderThickness="0" Margin="0,0,5,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Symbol" FontSize="9" Foreground="#606060"/>
                                    <TextBlock Text="{Binding SymbolSortIcon}" FontSize="9" Foreground="#606060" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding SortByNameCommand}" Background="Transparent" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Name" FontSize="9" Foreground="#606060"/>
                                    <TextBlock Text="{Binding NameSortIcon}" FontSize="9" Foreground="#606060" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Center Column Headers -->
                        <Grid Grid.Column="2" Margin="0,0,10,0" Visibility="{Binding IsPortfolioMode, Converter={StaticResource BoolToVis}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="DayChangeColumn"/>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="1" Text="Shares" FontSize="9" Foreground="#606060" HorizontalAlignment="Center" Width="60" Margin="10,0,0,0"/>
                            
                            <Button Grid.Column="2" Command="{Binding SortByDayChangeValueCommand}" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Day $" FontSize="9" Foreground="#606060"/>
                                    <TextBlock Text="{Binding DayChangeValueSortIcon}" FontSize="9" Foreground="#606060" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Grid.Column="3" Command="{Binding SortByMarketValueCommand}" Background="Transparent" BorderThickness="0" Margin="10,0,0,0" HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Value" FontSize="9" Foreground="#606060"/>
                                    <TextBlock Text="{Binding MarketValueSortIcon}" FontSize="9" Foreground="#606060" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Price/Change Headers -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Command="{Binding SortByChangeCommand}" Background="Transparent" BorderThickness="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Day %" FontSize="9" Foreground="#606060"/>
                                    <TextBlock Text="{Binding ChangeSortIcon}" FontSize="9" Foreground="#606060" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Stocks List -->
                    <ListView ItemsSource="{Binding Stocks}" 
                              Background="Transparent" BorderThickness="0" 
                              ItemContainerStyle="{StaticResource StockItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              BorderBrush="Transparent"
                              PreviewMouseWheel="ListView_PreviewMouseWheel">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Stock}">
                                <Grid Background="Transparent">
                                    <Grid.InputBindings>
                                        <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenStockCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Symbol}"/>
                                    </Grid.InputBindings>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Delete Button -->
                                    <Button Command="{Binding DataContext.RemoveStockCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0" Opacity="0" x:Name="DeleteBtn"
                                            VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" Height="20"
                                            Margin="-10,-5,0,0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="#40FF4D4D"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="✕" Foreground="#FF4D4D" FontSize="10" FontWeight="Bold"/>
                                    </Button>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="80">
                                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                        <TextBlock Text="{Binding Name}" Foreground="#A0A0A0" FontSize="11" TextTrimming="CharacterEllipsis" MaxWidth="120"/>
                                    </StackPanel>

                                    <!-- Center Column (Sparkline or Portfolio Data) -->
                                    <Grid Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="DayChangeColumn"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Sparkline Graph -->
                                        <Grid Grid.Column="0" Height="20">
                                            <Path Data="{Binding History, Converter={StaticResource SparklineBaselineConverter}}"
                                                  Stroke="#40FFFFFF" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill"/>
                                            <Path StrokeThickness="1.5" Stretch="Fill">
                                                <Path.Data>
                                                    <MultiBinding Converter="{StaticResource SparklineConverter}">
                                                        <Binding Path="History"/>
                                                        <Binding Path="DayProgress"/>
                                                    </MultiBinding>
                                                </Path.Data>
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <Setter Property="Stroke" Value="#FF4D4D"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Stroke" Value="#00CC6A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                        </Grid>

                                        <!-- Shares Input -->
                                        <Grid Grid.Column="1" Width="60" Margin="10,0,0,0" Visibility="{Binding DataContext.IsPortfolioMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">
                                            <TextBox x:Name="SharesBox"
                                                     Text="{Binding Shares, Converter={StaticResource ZeroToEmptyStringConverter}, UpdateSourceTrigger=LostFocus}"
                                                     Background="#202020" Foreground="White" BorderThickness="0"
                                                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                     Padding="2"
                                                     KeyDown="SharesBox_KeyDown">
                                                <TextBox.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="3"/>
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                            
                                            <!-- Overlay Button for "+" -->
                                            <Button Content="+" Background="Transparent" Foreground="#606060" BorderThickness="0"
                                                    IsHitTestVisible="False" FontSize="16" FontWeight="Bold">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Visibility" Value="{Binding Shares, Converter={StaticResource InverseDoubleToVis}}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ElementName=SharesBox, Path=IsFocused}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>

                                        <!-- Day Change Value -->
                                        <TextBlock Grid.Column="2" Margin="10,0,0,0" Text="{Binding DayChangeValue, StringFormat={}{0:+#.00;-#.00;0.00}}" 
                                                   FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"
                                                   Visibility="{Binding DataContext.IsPortfolioMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#FF4D4D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                            <Setter Property="Foreground" Value="#00CC6A"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Market Value -->
                                        <TextBlock Grid.Column="3" Margin="10,0,0,0" Text="{Binding MarketValue, StringFormat=C2}" 
                                                   Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center"
                                                   Visibility="{Binding DataContext.IsPortfolioMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}"/>
                                    </Grid>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border CornerRadius="3" Padding="3,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#30FF4D4D"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Background" Value="#3000CC6A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#FF4D4D"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                    <Setter Property="Foreground" Value="#00CC6A"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsMouseOver}" Value="True">
                                        <Setter TargetName="DeleteBtn" Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>

            <!-- Pinning Tooltip -->
            <Popup x:Name="PinningTooltip" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                <Border Background="#252525" BorderBrush="#404040" BorderThickness="1" CornerRadius="4" Padding="8,4" Margin="0,5,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="Window Pinned" Foreground="White" FontSize="12"/>
                </Border>
            </Popup>

            <!-- Add Stock UI -->
            <Grid Grid.Row="4" Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchBox" Text="{Binding NewSymbol, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#303030" Foreground="White" BorderThickness="0" Padding="5" 
                         VerticalContentAlignment="Center" Tag="Add Symbol..."/>
                
                <Popup IsOpen="{Binding IsSearchPopupOpen}" PlacementTarget="{Binding ElementName=SearchBox}" 
                       StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                    <Border Background="#252525" BorderBrush="#404040" BorderThickness="1" CornerRadius="4" MaxHeight="200" Width="{Binding ElementName=SearchBox, Path=ActualWidth}">
                        <ListView ItemsSource="{Binding SearchResults}" Background="Transparent" BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayText}" Foreground="White" Padding="5"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Background="{TemplateBinding Background}" Padding="2">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#404040"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Border>
                </Popup>

                <Button Grid.Column="1" Command="{Binding AddStockCommand}" Content="+" 
                        Background="#404040" Foreground="White" BorderThickness="0" Width="30" Margin="5,0,0,0"/>
            </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
