<Window x:Class="PortfolioWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PortfolioWatch.ViewModels"
        xmlns:models="clr-namespace:PortfolioWatch.Models"
        xmlns:converters="clr-namespace:PortfolioWatch.Converters"
        xmlns:helpers="clr-namespace:PortfolioWatch.Helpers"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        TextOptions.TextFormattingMode="{DynamicResource ThemeTextFormattingMode}"
        mc:Ignorable="d"
        Title="Portfolio Watchlist" Height="600" Width="470"
        MinHeight="575" MinWidth="470"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" ResizeMode="CanResize"
        Icon="/pyramid.png"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        PreviewKeyDown="Window_PreviewKeyDown">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <helpers:BindingProxy x:Key="Proxy" Data="{Binding}"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style x:Key="TooltipTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ThemedCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Border" 
                                    Grid.Column="0"
                                    Width="12" Height="12" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="2"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <Path x:Name="CheckMark" 
                                      Data="M 2,6 L 5,9 L 10,3" 
                                      Stroke="{DynamicResource PositiveColorBrush}" 
                                      StrokeThickness="1.5"
                                      Visibility="Collapsed"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"
                                      Margin="0,-1,0,0"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                              Margin="5,0,0,0" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                              HorizontalAlignment="Left" 
                                              RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckMark" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="CheckMark" Property="Stroke" Value="{DynamicResource SecondaryForegroundBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SecondaryForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <converters:DoubleToVisibilityConverter x:Key="DoubleToVis"/>
        <converters:InverseDoubleToVisibilityConverter x:Key="InverseDoubleToVis"/>
        <converters:SparklinePositiveConverter x:Key="SparklinePositiveConverter"/>
        <converters:SparklineNegativeConverter x:Key="SparklineNegativeConverter"/>
        <converters:SparklineBaselineConverter x:Key="SparklineBaselineConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter"/>
        <converters:PieSliceConverter x:Key="PieSliceConverter"/>
        <converters:TaxAllocationsToPieChartConverter x:Key="TaxAllocationsToPieChartConverter"/>
        <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <converters:EarningsStatusVisibilityConverter x:Key="EarningsStatusVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:NewsItemBorderConverter x:Key="NewsItemBorderConverter"/>
        <converters:NewsItemSpacingConverter x:Key="NewsItemSpacingConverter"/>
        <converters:SignalStrengthToOpacityConverter x:Key="SignalStrengthToOpacityConverter"/>
        <converters:PieChartVisibilityConverter x:Key="PieChartVisibilityConverter"/>

        <Style x:Key="NarrowScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="{x:Type Thumb}">
                                                <Setter Property="OverridesDefaultStyle" Value="true"/>
                                                <Setter Property="IsTabStop" Value="false"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                            <Border x:Name="rectangle" 
                                                                    Background="{DynamicResource PrimaryForegroundBrush}" 
                                                                    BorderBrush="{DynamicResource PrimaryForegroundBrush}"
                                                                    BorderThickness="0"
                                                                    Opacity="0.3" 
                                                                    CornerRadius="2" 
                                                                    SnapsToDevicePixels="True"/>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="true">
                                                                    <Setter Property="Opacity" TargetName="rectangle" Value="0.6"/>
                                                                    <Setter Property="Background" TargetName="rectangle" Value="{DynamicResource SecondaryForegroundBrush}"/>
                                                                </Trigger>
                                                                <Trigger Property="IsDragging" Value="true">
                                                                    <Setter Property="Opacity" TargetName="rectangle" Value="0.8"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PortfolioTabItemStyle" TargetType="TabItem">
            <EventSetter Event="PreviewMouseMove" Handler="TabItem_PreviewMouseMove" />
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TabItem_PreviewMouseLeftButtonDown" />
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="TabItem_PreviewMouseLeftButtonUp" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="Root" Background="Transparent" Margin="0,0,5,0" Cursor="Hand" Opacity="0.6">
                            <Grid.InputBindings>
                                <MouseBinding MouseAction="MiddleClick" Command="{Binding DataContext.RemoveTabCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
                            </Grid.InputBindings>
                            <Border x:Name="TabBorder" 
                                    Background="Transparent" 
                                    BorderBrush="{DynamicResource ControlBorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8,4"
                                    Margin="0,2">
                                <!-- Normal Tab Content -->
                                <Grid x:Name="NormalContent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox -->
                                    <Grid VerticalAlignment="Center" Margin="0,0,6,0">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="{Binding Data.IsSingleTab, Source={StaticResource Proxy}, Converter={StaticResource InverseBoolToVis}}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <CheckBox IsChecked="{Binding IsIncludedInTotal}" 
                                                  Style="{StaticResource ThemedCheckBoxStyle}"
                                                  Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}"
                                                  ToolTip="Include in portfolio total"/>
                                    </Grid>

                                    <!-- Pie Chart -->
                                    <Grid Grid.Column="1" Width="14" Height="14" Margin="0,0,6,0" VerticalAlignment="Center"
                                          Visibility="{Binding Data.IsMultiTabSelection, Source={StaticResource Proxy}, Converter={StaticResource BoolToVis}}"
                                          Background="Transparent"
                                          MouseLeftButtonDown="PieChart_MouseLeftButtonDown">
                                        <Ellipse Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1"/>
                                        <Viewbox>
                                            <Grid Width="22" Height="22">
                                                <Path Fill="{DynamicResource PositiveColorBrush}" Data="{Binding PortfolioPercentage, Converter={StaticResource PieSliceConverter}}" />
                                            </Grid>
                                        </Viewbox>
                                        <!-- Overlay Icon: Dollar Sign -->
                                        <Viewbox Width="8" Height="8" Margin="0,0,2,1">
                                            <Path Data="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z" 
                                                  Fill="#FFD700" 
                                                  Opacity="0.9"/>
                                        </Viewbox>
                                        <Grid.ToolTip>
                                            <ToolTip Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}">
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Portfolio Allocation" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Rectangle Width="12" Height="12" Fill="{DynamicResource PositiveColorBrush}" Margin="0,0,8,0" RadiusX="2" RadiusY="2" Stroke="{DynamicResource ControlBorderBrush}" StrokeThickness="1"/>
                                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding PortfolioPercentage, StringFormat={}{0:0.###%}}" Foreground="{DynamicResource SecondaryForegroundBrush}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding TotalValue, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="20,2,0,0" FontSize="11"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </Grid.ToolTip>
                                    </Grid>

                                    <!-- Tax Status Pie Chart -->
                                    <Grid Grid.Column="2" Margin="0,0,6,0" VerticalAlignment="Center" Cursor="Hand" Background="Transparent"
                                          MouseLeftButtonDown="TaxPie_MouseLeftButtonDown">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditingTaxStatus}" Value="True">
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Image Source="{Binding TaxAllocations, Converter={StaticResource TaxAllocationsToPieChartConverter}}" Width="14" Height="14"/>
                                        <!-- Overlay Icon: Bank -->
                                        <Viewbox Width="8" Height="8" Margin="0,0,0,1">
                                            <Path Data="M11.5,1L2,6V8H21V6L11.5,1M4,10V18H7V10H4M9,10V18H12V10H9M14,10V18H17V10H14M19,10V18H22V10H19M2,20V22H21V20H2Z" 
                                                  Fill="{DynamicResource PrimaryForegroundBrush}" 
                                                  Opacity="0.5"/>
                                        </Viewbox>
                                        <Grid.ToolTip>
                                            <ToolTip Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}">
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="Tax Allocation" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                                                    <Image Source="{Binding TaxAllocations, Converter={StaticResource TaxAllocationsToPieChartConverter}}" Width="150" Height="150" Margin="0,0,0,10"/>
                                                    <ItemsControl ItemsSource="{Binding TaxAllocations}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid Margin="0,2">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Rectangle Width="12" Height="12" Fill="{Binding Brush}" Margin="0,0,8,0" RadiusX="2" RadiusY="2" Stroke="{DynamicResource ControlBorderBrush}" StrokeThickness="1"/>
                                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                                    <TextBlock Grid.Column="2" Text="{Binding Percentage, StringFormat={}{0:0.0}%}" Foreground="{DynamicResource SecondaryForegroundBrush}" VerticalAlignment="Center"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </ToolTip>
                                        </Grid.ToolTip>
                                    </Grid>

                                    <!-- Read-only Text -->
                                    <TextBlock Grid.Column="3" x:Name="ContentText" Text="{Binding Name}" 
                                               FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVis}}"/>
                                    
                                    <!-- Editable Text -->
                                    <TextBox Grid.Column="3" x:Name="EditBox" Text="{Binding Name, UpdateSourceTrigger=LostFocus}"
                                             Style="{StaticResource TitleTextBoxStyle}"
                                             FontSize="13" FontWeight="SemiBold"
                                             Foreground="{DynamicResource PrimaryForegroundBrush}"
                                             Background="Transparent"
                                             CaretBrush="{DynamicResource PrimaryForegroundBrush}"
                                             VerticalAlignment="Center"
                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"
                                             KeyDown="TabHeader_KeyDown"
                                             LostFocus="TabHeader_LostFocus"/>
                                    
                                    <!-- Delete Button (Hover) -->
                                    <Button Grid.Column="4" x:Name="DeleteButton" 
                                            Command="{Binding Data.RemoveTabCommand, Source={StaticResource Proxy}}" 
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0" 
                                            Visibility="Collapsed"
                                            VerticalAlignment="Center" Margin="6,0,0,0"
                                            Width="16" Height="16">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource DeleteButtonHoverBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <TextBlock Text="✕" Foreground="{DynamicResource NegativeColorBrush}" FontSize="9" FontWeight="Bold"/>
                                    </Button>
                                </Grid>
                            </Border>

                            <!-- Add Button Content -->
                            <Grid x:Name="AddButtonContent" Visibility="Collapsed" ToolTip="New tab">
                                <TextBlock x:Name="AddIcon" Text="+" FontSize="18" FontWeight="Bold" 
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,0"/>
                            </Grid>

                            <Grid.ContextMenu>
                                <ContextMenu Opened="ContextMenu_Opened" Closed="ContextMenu_Closed">
                                    <MenuItem Header="Adjust tax status allocation" Command="{Binding EditTaxStatusCommand}" Style="{StaticResource NoIconMenuItemStyle}"/>
                                    <Separator />
                                    <MenuItem Header="Rename" Command="{Binding Data.RenameTabCommand, Source={StaticResource Proxy}}" CommandParameter="{Binding}" Style="{StaticResource NoIconMenuItemStyle}"/>
                                    <MenuItem Header="Duplicate Tab" Command="{Binding Data.DuplicateTabCommand, Source={StaticResource Proxy}}" CommandParameter="{Binding}" Style="{StaticResource NoIconMenuItemStyle}"/>
                                    <Separator />
                                    <MenuItem Header="Delete" Command="{Binding Data.RemoveTabCommand, Source={StaticResource Proxy}}" CommandParameter="{Binding}" Style="{StaticResource NoIconMenuItemStyle}"/>
                                </ContextMenu>
                            </Grid.ContextMenu>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- IsAddButton Trigger -->
                            <DataTrigger Binding="{Binding IsAddButton}" Value="True">
                                <Setter TargetName="TabBorder" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="AddButtonContent" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Root" Property="ContextMenu" Value="{x:Null}"/>
                            </DataTrigger>

                            <!-- Selection Triggers -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="1.0"/>
                                <Setter TargetName="ContentText" Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                <Setter TargetName="TabBorder" Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
                                <Setter TargetName="TabBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#007ACC" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Hover Triggers -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="1.0"/>
                                <Setter TargetName="ContentText" Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                <Setter TargetName="DeleteButton" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
                            </Trigger>

                            <!-- Add Button Hover Glow -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsAddButton}" Value="True"/>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="AddIcon" Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                <Setter TargetName="AddIcon" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#007ACC" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiDataTrigger>

                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsAddButton}" Value="True"/>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="DeleteButton" Property="Visibility" Value="Collapsed"/>
                            </MultiDataTrigger>

                            <!-- Hide Delete Button if Single Tab -->
                            <DataTrigger Binding="{Binding Data.IsSingleTab, Source={StaticResource Proxy}}" Value="True">
                                <Setter TargetName="DeleteButton" Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PortfolioTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Header Panel -->
                            <Grid Grid.Row="0" Margin="15,0,15,5">
                                <Grid.Visibility>
                                    <Binding Path="IsMergedView" Converter="{StaticResource InverseBoolToVis}"/>
                                </Grid.Visibility>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <RepeatButton x:Name="ScrollLeftButton" Grid.Column="0" 
                                              Width="20" Height="20" Margin="0,0,5,0" 
                                              Click="ScrollLeftButton_Click" Visibility="Collapsed"
                                              Background="Transparent" BorderThickness="0" 
                                              Cursor="Hand" ToolTip="Scroll Left">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="3">
                                                <Path Data="M 8,4 L 4,8 L 8,12" 
                                                      Stroke="{DynamicResource SecondaryForegroundBrush}" 
                                                      StrokeThickness="1.5" 
                                                      VerticalAlignment="Center" HorizontalAlignment="Center"
                                                      Margin="1,0,0,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource PositiveBackgroundBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>

                                <ScrollViewer x:Name="HeaderScrollViewer" Grid.Column="1" 
                                              HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" 
                                              PanningMode="HorizontalOnly" Height="Auto"
                                              ScrollChanged="HeaderScrollViewer_ScrollChanged">
                                     <TabPanel x:Name="HeaderPanel" IsItemsHost="True" Background="Transparent"/>
                                </ScrollViewer>

                                <RepeatButton x:Name="ScrollRightButton" Grid.Column="2" 
                                              Width="20" Height="20" Margin="5,0,0,0" 
                                              Click="ScrollRightButton_Click" Visibility="Collapsed"
                                              Background="Transparent" BorderThickness="0" 
                                              Cursor="Hand" ToolTip="Scroll Right">
                                    <RepeatButton.Template>
                                        <ControlTemplate TargetType="RepeatButton">
                                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="3">
                                                <Path Data="M 4,4 L 8,8 L 4,12" 
                                                      Stroke="{DynamicResource SecondaryForegroundBrush}" 
                                                      StrokeThickness="1.5" 
                                                      VerticalAlignment="Center" HorizontalAlignment="Center"
                                                      Margin="0,0,1,0"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource PositiveBackgroundBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RepeatButton.Template>
                                </RepeatButton>
                            </Grid>

                            <!-- Merged View Header -->
                            <Border Grid.Row="0" Margin="15,0,15,5" 
                                    Background="{DynamicResource ControlBackgroundBrush}" 
                                    BorderBrush="{DynamicResource ControlBorderBrush}" 
                                    BorderThickness="1" CornerRadius="4" Padding="10,5"
                                    Visibility="{Binding IsMergedView, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Merged View: All Included Tabs" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Text=" (Read-Only)" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <ContentPresenter x:Name="PART_SelectedContentHost" Grid.Row="1" ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SignalStrengthIndicatorStyle" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="1,0,-2,-1">
                            <Rectangle VerticalAlignment="Bottom" Width="1.5" Height="3" Margin="0,0,1,0" Fill="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Opacity="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SignalStrengthToOpacityConverter}, ConverterParameter=1}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle VerticalAlignment="Bottom" Width="1.5" Height="4" Margin="0,0,1,0" Fill="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Opacity="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SignalStrengthToOpacityConverter}, ConverterParameter=2}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle VerticalAlignment="Bottom" Width="1.5" Height="5" Margin="0,0,1,0" Fill="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Opacity="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SignalStrengthToOpacityConverter}, ConverterParameter=3}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle VerticalAlignment="Bottom" Width="1.5" Height="6" Margin="0,0,1,0" Fill="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Opacity="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SignalStrengthToOpacityConverter}, ConverterParameter=4}" RadiusX="0.5" RadiusY="0.5"/>
                            <Rectangle VerticalAlignment="Bottom" Width="1.5" Height="7" Margin="0,0,0,0" Fill="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" Opacity="{Binding Content, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource SignalStrengthToOpacityConverter}, ConverterParameter=5}" RadiusX="0.5" RadiusY="0.5"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RangeRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="4,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainContentGrid" Grid.IsSharedSizeScope="True">
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="{Binding UIScale}" ScaleY="{Binding UIScale}"/>
        </Grid.LayoutTransform>
        <!-- Background Layer -->
        <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="12" Margin="5">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Opacity" Value="{Binding WindowOpacity}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                            <Setter Property="Opacity" Value="1.0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
        </Border>

        <!-- Content Layer -->
        <Border Background="Transparent" CornerRadius="12" BorderBrush="{DynamicResource WindowBorderBrush}" BorderThickness="1" Margin="5" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="15,15,15,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Text="{Binding WindowTitle, UpdateSourceTrigger=LostFocus}" 
                         FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryForegroundBrush}" 
                         VerticalAlignment="Center" HorizontalAlignment="Left"
                         Background="Transparent" BorderThickness="0"
                         CaretBrush="{DynamicResource PrimaryForegroundBrush}"
                         KeyDown="TitleTextBox_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="3" Padding="2">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource TextBoxFocusedBackgroundBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource TextBoxMouseOverBackgroundBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0" ToolTip="Toggle Portfolio Mode">
                    <TextBlock Text="Portfolio mode" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioMode}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <ToggleButton IsChecked="{Binding IsPortfolioMode}" Style="{StaticResource ToggleSwitchStyle}"/>
                </StackPanel>

                <Button x:Name="RefreshButton" Focusable="False" IsTabStop="False" Grid.Column="2" Command="{Binding RefreshCommand}" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Refresh"
                        Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="14" Height="14" Stretch="Uniform"/>
                </Button>

                <Button x:Name="MenuButton" Grid.Column="3" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Menu" Click="MenuButton_Click"
                        Foreground="{DynamicResource SecondaryForegroundBrush}">
                    <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="14" Height="14" Stretch="Uniform"/>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Appearance">
                                <MenuItem Header="Theme">
                                    <MenuItem Header="System" Command="{Binding SetThemeCommand}" CommandParameter="System">
                                        <MenuItem.Icon>
                                            <TextBlock Text="✓" Visibility="{Binding IsSystemTheme, Converter={StaticResource BoolToVis}}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Light" Command="{Binding SetThemeCommand}" CommandParameter="Light">
                                        <MenuItem.Icon>
                                            <TextBlock Text="✓" Visibility="{Binding IsLightTheme, Converter={StaticResource BoolToVis}}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Dark" Command="{Binding SetThemeCommand}" CommandParameter="Dark">
                                        <MenuItem.Icon>
                                            <TextBlock Text="✓" Visibility="{Binding IsDarkTheme, Converter={StaticResource BoolToVis}}"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuItem>
                                <MenuItem Header="Widget decorations">
                                    <MenuItem Header="Show Intraday %" IsCheckable="True" IsChecked="{Binding ShowFloatingWindowIntradayPercent}" StaysOpenOnClick="True"/>
                                    <MenuItem Header="Show Intraday Graph" IsCheckable="True" IsChecked="{Binding ShowFloatingWindowIntradayGraph}" StaysOpenOnClick="True"/>
                                    <MenuItem Header="Show Total Value" IsCheckable="True" IsChecked="{Binding ShowFloatingWindowTotalValue}" StaysOpenOnClick="True"/>
                                </MenuItem>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Open" Command="{Binding OpenPortfolioCommand}"/>
                            <MenuItem Header="Save all tabs" Command="{Binding SavePortfolioCommand}"/>
                            <MenuItem Header="Normalize current tab values" Command="{Binding NormalizeCurrentTabCommand}"/>
                            <Separator/>
                            <MenuItem Header="Reset Application" Command="{Binding ResetCommand}"/>
                            <Separator/>
                            <MenuItem Header="Check for Updates" Command="{Binding CheckForUpdatesCommand}"/>
                            <MenuItem Header="About Portfolio Watch" Command="{Binding OpenAboutCommand}"/>
                            <MenuItem Header="Request a Feature" Command="{Binding RequestFeatureCommand}"/>
                            <Separator/>
                            <MenuItem Header="Buy me a coffee ☕">
                                <MenuItem Header="$1" Command="{Binding BuyCoffeeCommand}" CommandParameter="1"/>
                                <MenuItem Header="$3" Command="{Binding BuyCoffeeCommand}" CommandParameter="3"/>
                                <MenuItem Header="$5" Command="{Binding BuyCoffeeCommand}" CommandParameter="5"/>
                                <MenuItem Header="Custom Amount..." Command="{Binding BuyCoffeeCommand}" CommandParameter="Custom"/>
                                <Separator/>
                                <MenuItem Header="Send Feedback instead" Command="{Binding BuyCoffeeCommand}" CommandParameter="0"/>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                
                <Button Grid.Column="4" Content="✕" Background="Transparent" Foreground="{DynamicResource TertiaryForegroundBrush}" BorderThickness="0" Click="CloseButton_Click" FontSize="14" VerticalAlignment="Center"/>
            </Grid>

            <!-- Portfolio Summary -->
            <Grid Grid.Row="1" Margin="15,0,15,10" Visibility="{Binding IsPortfolioMode, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Aggregate Tax Allocation Pie Chart -->
                    <Grid Margin="0,0,12,0" VerticalAlignment="Center" Cursor="Hand"
                          MouseLeftButtonDown="AggregateTaxPie_MouseLeftButtonDown"
                          MouseLeave="AggregateTaxPie_MouseLeave"
                          Background="Transparent">
                        <Image Source="{Binding AggregateTaxAllocations, Converter={StaticResource TaxAllocationsToPieChartConverter}}" 
                               Width="28" Height="28"/>
                        <!-- Overlay Icon: Bank -->
                        <Viewbox Width="14" Height="14" Margin="0,0,0,0">
                            <Path Data="M11.5,1L2,6V8H21V6L11.5,1M4,10V18H7V10H4M9,10V18H12V10H9M14,10V18H17V10H14M19,10V18H22V10H19M2,20V22H21V20H2Z" 
                                  Fill="{DynamicResource PrimaryForegroundBrush}" 
                                  Opacity="0.5"/>
                        </Viewbox>
                        <Grid.ToolTip>
                            <ToolTip Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}">
                                <StackPanel Margin="5">
                                    <TextBlock Text="Portfolio Tax Allocation" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                                    <Grid HorizontalAlignment="Center" Margin="0,0,0,10">
                                        <Image Source="{Binding AggregateTaxAllocations, Converter={StaticResource TaxAllocationsToPieChartConverter}}" Width="150" Height="150"/>
                                        <!-- Large Bank Icon Overlay -->
                                        <Viewbox Width="60" Height="60" Margin="0,0,6,0">
                                            <Path Data="M11.5,1L2,6V8H21V6L11.5,1M4,10V18H7V10H4M9,10V18H12V10H9M14,10V18H17V10H14M19,10V18H22V10H19M2,20V22H21V20H2Z" 
                                                  Fill="{DynamicResource PrimaryForegroundBrush}" 
                                                  Opacity="0.5"/>
                                        </Viewbox>
                                    </Grid>
                                    <ItemsControl ItemsSource="{Binding AggregateTaxAllocations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Rectangle Width="12" Height="12" Fill="{Binding Brush}" Margin="0,0,8,0" RadiusX="2" RadiusY="2" Stroke="{DynamicResource ControlBorderBrush}" StrokeThickness="1"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding Percentage, StringFormat={}{0:0.0}%}" Foreground="{DynamicResource SecondaryForegroundBrush}" VerticalAlignment="Center"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ToolTip>
                        </Grid.ToolTip>
                    </Grid>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Total Value" Foreground="{DynamicResource TertiaryForegroundBrush}" FontSize="11"/>
                        <TextBlock Text="{Binding TotalPortfolioValue, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Portfolio Graph -->
                <Grid Grid.Column="1" Margin="20,0" VerticalAlignment="Center" Height="30" Background="Transparent"
                      MouseMove="Graph_MouseMove" MouseLeave="Graph_MouseLeave">
                    <Path Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill" IsHitTestVisible="False">
                        <Path.Data>
                            <MultiBinding Converter="{StaticResource SparklineBaselineConverter}">
                                <Binding Path="PortfolioHistory"/>
                                <Binding Path="PortfolioPreviousClose"/>
                            </MultiBinding>
                        </Path.Data>
                    </Path>
                    <Path Stroke="{DynamicResource PositiveColorBrush}" StrokeThickness="2" Stretch="Fill" IsHitTestVisible="False">
                        <Path.Data>
                            <MultiBinding Converter="{StaticResource SparklinePositiveConverter}">
                                <Binding Path="PortfolioHistory"/>
                                <Binding Path="PortfolioDayProgress"/>
                                <Binding Path="PortfolioPreviousClose"/>
                                <Binding Path="PortfolioTimestamps"/>
                                <Binding Path="SelectedRange"/>
                            </MultiBinding>
                        </Path.Data>
                    </Path>
                    <Path Stroke="{DynamicResource NegativeColorBrush}" StrokeThickness="2" Stretch="Fill" IsHitTestVisible="False">
                        <Path.Data>
                            <MultiBinding Converter="{StaticResource SparklineNegativeConverter}">
                                <Binding Path="PortfolioHistory"/>
                                <Binding Path="PortfolioDayProgress"/>
                                <Binding Path="PortfolioPreviousClose"/>
                                <Binding Path="PortfolioTimestamps"/>
                                <Binding Path="SelectedRange"/>
                            </MultiBinding>
                        </Path.Data>
                    </Path>
                </Grid>

                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding TotalPortfolioChangePercent, StringFormat={}{0:+0.00%;-0.00%;0.00%}}" 
                               FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioUp}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock Text="{Binding TotalPortfolioChange, StringFormat={}{0:+$#,##0.00;-$#,##0.00;$0.00}}" 
                               FontSize="11" HorizontalAlignment="Right">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPortfolioUp}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- Sorting & Indexes Toggle -->
            <Grid Grid.Row="2" Margin="15,0,15,5">
                <!-- Range Selector -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <RadioButton Content="1D" Command="{Binding SetRangeCommand}" CommandParameter="1d" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=1d, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="5D" Command="{Binding SetRangeCommand}" CommandParameter="5d" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=5d, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="30D" Command="{Binding SetRangeCommand}" CommandParameter="1mo" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=1mo, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="1Y" Command="{Binding SetRangeCommand}" CommandParameter="1y" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=1y, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="5Y" Command="{Binding SetRangeCommand}" CommandParameter="5y" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=5y, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                    <RadioButton Content="10Y" Command="{Binding SetRangeCommand}" CommandParameter="10y" 
                                 IsChecked="{Binding SelectedRange, Converter={StaticResource StringEqualityConverter}, ConverterParameter=10y, Mode=OneWay}"
                                 Style="{StaticResource RangeRadioButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox IsChecked="{Binding IsAllIncluded, Mode=OneWay}" 
                              Command="{Binding ToggleAllIncludedCommand}"
                              Content="Include inactive tabs"
                              Style="{StaticResource ThemedCheckBoxStyle}"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"
                              ToolTip="Include all tabs in portfolio total"
                              Visibility="{Binding IsSingleTab, Converter={StaticResource InverseBoolToVis}}"/>

                    <CheckBox IsChecked="{Binding IsMergedView}" 
                              Content="Merged view"
                              Style="{StaticResource ThemedCheckBoxStyle}"
                              FontSize="11"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"
                              ToolTip="Aggregated view of all tabs included in Total Value"
                              Visibility="{Binding IsSingleTab, Converter={StaticResource InverseBoolToVis}}"/>

                    <ToggleButton IsChecked="{Binding IsIndexesVisible}" Background="Transparent" BorderThickness="0" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Indexes"/>
                                    <Path x:Name="Arrow" Data="M0,0 L4,4 L8,0" Stroke="{DynamicResource SecondaryForegroundBrush}" StrokeThickness="1" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Arrow" Property="Data" Value="M0,4 L4,0 L8,4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                </StackPanel>
            </Grid>

            <!-- List Area -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Indexes List -->
                <StackPanel Grid.Row="0">
                    <ListView ItemsSource="{Binding Indexes}" 
                              Visibility="{Binding IsIndexesVisible, Converter={StaticResource BoolToVis}}"
                              Background="Transparent" BorderThickness="0" 
                              ItemContainerStyle="{StaticResource StockItemStyle}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              BorderBrush="Transparent"
                              PreviewMouseWheel="ListView_PreviewMouseWheel">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:Stock}">
                                <Grid Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- No Delete Button for Indexes -->
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,10,0" MinWidth="80">
                                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="14"/>
                                        <TextBlock Text="{Binding Name}" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9" TextTrimming="CharacterEllipsis" MaxWidth="120" Margin="0" Padding="0" HorizontalAlignment="Left"/>
                                    </StackPanel>

                                    <!-- Center Column (Sparkline) -->
                                    <Grid Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center" Height="20" Background="Transparent"
                                          MouseMove="Graph_MouseMove" MouseLeave="Graph_MouseLeave">
                                        <Path Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill" IsHitTestVisible="False">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource SparklineBaselineConverter}">
                                                    <Binding Path="History"/>
                                                    <Binding Path="PreviousClose"/>
                                                </MultiBinding>
                                            </Path.Data>
                                        </Path>
                                        <Path Stroke="{DynamicResource PositiveColorBrush}" StrokeThickness="1.5" Stretch="Fill" IsHitTestVisible="False">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource SparklinePositiveConverter}">
                                                    <Binding Path="History"/>
                                                    <Binding Path="DayProgress"/>
                                                    <Binding Path="PreviousClose"/>
                                                    <Binding Path="Timestamps"/>
                                                    <Binding Path="DataContext.SelectedRange" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                </MultiBinding>
                                            </Path.Data>
                                        </Path>
                                        <Path Stroke="{DynamicResource NegativeColorBrush}" StrokeThickness="1.5" Stretch="Fill" IsHitTestVisible="False">
                                            <Path.Data>
                                                <MultiBinding Converter="{StaticResource SparklineNegativeConverter}">
                                                    <Binding Path="History"/>
                                                    <Binding Path="DayProgress"/>
                                                    <Binding Path="PreviousClose"/>
                                                    <Binding Path="Timestamps"/>
                                                    <Binding Path="DataContext.SelectedRange" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                </MultiBinding>
                                            </Path.Data>
                                        </Path>
                                    </Grid>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="13"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border CornerRadius="3" Padding="3,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{DynamicResource NegativeBackgroundBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource PositiveBackgroundBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" FontSize="10" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                    <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource SeparatorBrush}" Margin="5,5,5,5" 
                            Visibility="{Binding IsIndexesVisible, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>

                <!-- Tabbed Portfolio -->
                <TabControl x:Name="MainTabControl" Grid.Row="1" 
                            ItemsSource="{Binding Tabs}" 
                            SelectedItem="{Binding SelectedTab}"
                            Style="{StaticResource PortfolioTabControlStyle}"
                            ItemContainerStyle="{StaticResource PortfolioTabItemStyle}">
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <Grid Margin="10,0,10,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Symbol/Name Headers -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,10,0">
                                        <Button Command="{Binding DataContext.SortBySymbolCommand, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent" BorderThickness="0" Margin="0,0,5,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Symbol" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                                <TextBlock Text="{Binding DataContext.SymbolSortIcon, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Command="{Binding DataContext.SortByNameCommand, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent" BorderThickness="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Name" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                                <TextBlock Text="{Binding DataContext.NameSortIcon, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- Center Column Headers -->
                                    <Grid Grid.Column="2" Margin="0,0,10,0" Visibility="{Binding DataContext.IsPortfolioMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="DayChangeColumn"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="1" Text="Shares" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" HorizontalAlignment="Right" TextAlignment="Right" Width="60" Margin="10,0,20,0"/>
                                        
                                        <Button Grid.Column="2" Command="{Binding DataContext.SortByMarketValueCommand, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent" BorderThickness="0" Margin="10,0,20,0" HorizontalAlignment="Right">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Value" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                                <TextBlock Text="{Binding DataContext.MarketValueSortIcon, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                        
                                        <Button Grid.Column="3" Command="{Binding DataContext.SortByDayChangeValueCommand, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent" BorderThickness="0" Margin="10,0,20,0" HorizontalAlignment="Right">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DataContext.DayChangeLabel, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                                <TextBlock Text="{Binding DataContext.DayChangeValueSortIcon, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>

                                    <!-- Price/Change Headers -->
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Command="{Binding DataContext.SortByChangeCommand, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent" BorderThickness="0" Margin="0,0,20,0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding DataContext.ChangePercentLabel, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}"/>
                                                <TextBlock Text="{Binding DataContext.ChangeSortIcon, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="9" Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="2,0,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>

                                <!-- Stocks List -->
                                <TextBlock Text="Add a stock from the search bar below to get started"
                                           Grid.Row="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           Margin="0,40,0,0"
                                           Foreground="{DynamicResource TertiaryForegroundBrush}"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Stocks.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ScrollViewer x:Name="MainScrollViewer" AutomationProperties.AutomationId="MainScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Padding="10,0">
                                    <ScrollViewer.Template>
                                        <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                            <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" Grid.Row="0"/>
                                                <ScrollBar x:Name="PART_VerticalScrollBar" AutomationProperties.AutomationId="VerticalScrollBar_Custom" Cursor="Arrow" Grid.Column="1" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Grid.Row="0" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportHeight}" Style="{StaticResource NarrowScrollBarStyle}" Width="4" MinWidth="0" MaxWidth="4"/>
                                                <ScrollBar x:Name="PART_HorizontalScrollBar" AutomationProperties.AutomationId="HorizontalScrollBar_Custom" Cursor="Arrow" Grid.Column="0" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Orientation="Horizontal" Grid.Row="1" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}" Style="{StaticResource NarrowScrollBarStyle}" Height="4" MinHeight="0" MaxHeight="4"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ScrollViewer.Template>
                                    <ListView ItemsSource="{Binding DataContext.Stocks, RelativeSource={RelativeSource AncestorType=Window}}" 
                                              Background="Transparent" BorderThickness="0" 
                                              ItemContainerStyle="{StaticResource StockItemStyle}"
                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                              BorderBrush="Transparent"
                                              PreviewMouseWheel="ListView_PreviewMouseWheel">
                                        <ListView.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:Stock}">
                                                <Grid Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="12"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Delete Button -->
                                                    <Button Command="{Binding DataContext.RemoveStockCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" BorderThickness="0" Opacity="0" x:Name="DeleteBtn"
                                                            VerticalAlignment="Center" HorizontalAlignment="Center" Width="16" Height="16"
                                                            Margin="-2,0,0,0" Grid.Column="0">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="BtnBorder" Background="{TemplateBinding Background}" CornerRadius="3">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="BtnBorder" Property="Background" Value="{DynamicResource DeleteButtonHoverBrush}"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                        <TextBlock Text="✕" Foreground="{DynamicResource NegativeColorBrush}" FontSize="9" FontWeight="Bold"/>
                                                    </Button>

                                                    <!-- Clickable Content Container -->
                                                    <Grid Grid.Column="1" Background="Transparent">
                                                        <Grid.InputBindings>
                                                            <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenStockCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                                        </Grid.InputBindings>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" SharedSizeGroup="SymbolColumn"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto" SharedSizeGroup="PriceColumn"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Grid Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" MinWidth="80">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Symbol}" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="14"/>
                                                                    
                                                                    <!-- News Flag -->
                                                                    <emoji:TextBlock Text="{Binding NewsEmoji}" Margin="3,0,0,0" 
                                                                               Visibility="{Binding HasNewsFlag, Converter={StaticResource BoolToVis}}"
                                                                               Cursor="Hand" FontSize="10" Opacity="0.9" VerticalAlignment="Center"
                                                                               MouseEnter="NewsFlag_MouseEnter" MouseLeave="NewsFlag_MouseLeave"
                                                                               MouseLeftButtonDown="NewsFlag_MouseLeftButtonDown"/>

                                                                    <!-- Earnings Flag -->
                                                                    <Grid Margin="3,0,0,0" 
                                                                          Visibility="{Binding HasEarningsFlag, Converter={StaticResource BoolToVis}}"
                                                                          Cursor="Hand" VerticalAlignment="Center"
                                                                          MouseEnter="EarningsFlag_MouseEnter" MouseLeave="EarningsFlag_MouseLeave"
                                                                          MouseLeftButtonDown="EarningsFlag_MouseLeftButtonDown"
                                                                          Background="Transparent">
                                                                        <emoji:TextBlock Text="{Binding EarningsEmoji}" FontSize="10" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                                            <emoji:TextBlock.Style>
                                                                                <Style TargetType="emoji:TextBlock">
                                                                                    <Setter Property="Margin" Value="0,0,0,2"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding EarningsStatus}" Value="Upcoming">
                                                                                            <Setter Property="Margin" Value="0,2,0,0"/>
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </emoji:TextBlock.Style>
                                                                        </emoji:TextBlock>
                                                                        <ContentControl Style="{StaticResource SignalStrengthIndicatorStyle}" 
                                                                                        Content="{Binding EarningsSignalStrength}" 
                                                                                        Tag="{Binding EarningsFlagColor}"
                                                                                        HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,0"
                                                                                        Visibility="{Binding EarningsStatus, Converter={StaticResource EarningsStatusVisibilityConverter}}"/>
                                                                    </Grid>

                                                                    <!-- Insider Flag -->
                                                                    <Grid Margin="3,0,0,0" 
                                                                          Visibility="{Binding HasInsiderFlag, Converter={StaticResource BoolToVis}}"
                                                                          Cursor="Hand" VerticalAlignment="Center"
                                                                          MouseEnter="InsiderFlag_MouseEnter" MouseLeave="InsiderFlag_MouseLeave"
                                                                          MouseLeftButtonDown="InsiderFlag_MouseLeftButtonDown"
                                                                          Background="Transparent">
                                                                        <emoji:TextBlock Text="{Binding InsiderEmoji}" FontSize="10" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                                                        <ContentControl Style="{StaticResource SignalStrengthIndicatorStyle}" 
                                                                                        Content="{Binding InsiderSignalStrength}" 
                                                                                        Tag="{Binding InsiderSignalColor}"
                                                                                        HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,0"/>
                                                                    </Grid>

                                                                    <!-- Options Flag -->
                                                                    <Grid Margin="3,0,0,0" 
                                                                          Visibility="{Binding HasOptionsFlag, Converter={StaticResource BoolToVis}}"
                                                                          Cursor="Hand" VerticalAlignment="Center"
                                                                          MouseEnter="OptionsFlag_MouseEnter" MouseLeave="OptionsFlag_MouseLeave"
                                                                          MouseLeftButtonDown="OptionsFlag_MouseLeftButtonDown"
                                                                          Background="Transparent">
                                                                        <emoji:TextBlock Text="{Binding OptionsEmoji}" FontSize="10" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                                                        <ContentControl Style="{StaticResource SignalStrengthIndicatorStyle}" 
                                                                                        Content="{Binding OptionsSignalStrength}" 
                                                                                        Tag="{Binding SignalStrengthColor}"
                                                                                        HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,0"/>
                                                                    </Grid>

                                                                    <!-- RVOL Flag -->
                                                                    <Grid Margin="3,0,0,0" 
                                                                          Visibility="{Binding HasRVolFlag, Converter={StaticResource BoolToVis}}"
                                                                          Cursor="Hand" VerticalAlignment="Center"
                                                                          MouseEnter="RVolFlag_MouseEnter" MouseLeave="RVolFlag_MouseLeave"
                                                                          MouseLeftButtonDown="RVolFlag_MouseLeftButtonDown"
                                                                          Background="Transparent">
                                                                        <emoji:TextBlock Text="{Binding RVolEmoji}" FontSize="10" Opacity="0.9" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                                                        <ContentControl Style="{StaticResource SignalStrengthIndicatorStyle}" 
                                                                                        Content="{Binding RVolSignalStrength}" 
                                                                                        Tag="{Binding RVolSignalColor}"
                                                                                        HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3,0,0,0"/>
                                                                    </Grid>
                                                                </StackPanel>
                                                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="9" TextTrimming="CharacterEllipsis" MaxWidth="120" Margin="0" Padding="0" HorizontalAlignment="Left"/>
                                                            </StackPanel>
                                                            
                                                            <!-- Pie Chart -->
                                                            <Grid Grid.Column="1" Width="22" Height="22" Margin="5,0,0,0" 
                                                                  MouseEnter="Pie_MouseEnter" MouseLeave="Pie_MouseLeave" Background="Transparent">
                                                                <Grid.Visibility>
                                                                    <MultiBinding Converter="{StaticResource PieChartVisibilityConverter}">
                                                                        <Binding Path="Shares"/>
                                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                        <Binding Path="DataContext.UIScale" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                    </MultiBinding>
                                                                </Grid.Visibility>
                                                                <Ellipse Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                         Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" />
                                                                <Path Fill="{DynamicResource PositiveColorBrush}" Data="{Binding PortfolioPercentage, Converter={StaticResource PieSliceConverter}}" />
                                                            </Grid>
                                                        </Grid>

                                                        <!-- Center Column (Sparkline or Portfolio Data) -->
                                                        <Grid Grid.Column="1" Margin="0,0,10,0" VerticalAlignment="Center">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Sparkline Graph -->
                                                            <Grid Grid.Column="0" Height="20" Background="Transparent"
                                                                  MouseMove="Graph_MouseMove" MouseLeave="Graph_MouseLeave">
                                                                <Path Stroke="{DynamicResource TertiaryForegroundBrush}" StrokeThickness="1" StrokeDashArray="2 2" Stretch="Fill" IsHitTestVisible="False">
                                                                    <Path.Data>
                                                                        <MultiBinding Converter="{StaticResource SparklineBaselineConverter}">
                                                                            <Binding Path="History"/>
                                                                            <Binding Path="PreviousClose"/>
                                                                        </MultiBinding>
                                                                    </Path.Data>
                                                                </Path>
                                                                <Path Stroke="{DynamicResource PositiveColorBrush}" StrokeThickness="1.5" Stretch="Fill" IsHitTestVisible="False">
                                                                    <Path.Data>
                                                                        <MultiBinding Converter="{StaticResource SparklinePositiveConverter}">
                                                                            <Binding Path="History"/>
                                                                            <Binding Path="DayProgress"/>
                                                                            <Binding Path="PreviousClose"/>
                                                                            <Binding Path="Timestamps"/>
                                                                            <Binding Path="DataContext.SelectedRange" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                        </MultiBinding>
                                                                    </Path.Data>
                                                                </Path>
                                                                <Path Stroke="{DynamicResource NegativeColorBrush}" StrokeThickness="1.5" Stretch="Fill" IsHitTestVisible="False">
                                                                    <Path.Data>
                                                                        <MultiBinding Converter="{StaticResource SparklineNegativeConverter}">
                                                                            <Binding Path="History"/>
                                                                            <Binding Path="DayProgress"/>
                                                                            <Binding Path="PreviousClose"/>
                                                                            <Binding Path="Timestamps"/>
                                                                            <Binding Path="DataContext.SelectedRange" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                        </MultiBinding>
                                                                    </Path.Data>
                                                                </Path>
                                                            </Grid>

                                                            <!-- Portfolio Data -->
                                                            <Grid Grid.Column="1" Visibility="{Binding DataContext.IsPortfolioMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BoolToVis}}">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                                                                    <ColumnDefinition Width="Auto" SharedSizeGroup="DayChangeColumn"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Shares Input -->
                                                                <Grid Grid.Column="0" Width="60" Margin="10,0,0,0">
                                                                    <TextBox x:Name="SharesBox"
                                                                             Text="{Binding Shares, Converter={StaticResource ZeroToEmptyStringConverter}, ConverterParameter='#,##0.###', UpdateSourceTrigger=LostFocus}"
                                                                             Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}" BorderThickness="0"
                                                                             HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                                                                             Padding="2"
                                                                             FontWeight="SemiBold"
                                                                             KeyDown="SharesBox_KeyDown"
                                                                             GotFocus="SharesBox_GotFocus"
                                                                             LostFocus="SharesBox_LostFocus"
                                                                             IsReadOnly="{Binding DataContext.IsMergedView, RelativeSource={RelativeSource AncestorType=Window}}">
                                                                        <TextBox.Resources>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="CornerRadius" Value="3"/>
                                                                            </Style>
                                                                        </TextBox.Resources>
                                                                        <TextBox.Style>
                                                                            <Style TargetType="TextBox">
                                                                                <Style.Triggers>
                                                                                    <Trigger Property="IsReadOnly" Value="True">
                                                                                        <Setter Property="Opacity" Value="0.7"/>
                                                                                        <Setter Property="IsHitTestVisible" Value="False"/>
                                                                                        <Setter Property="Background" Value="Transparent"/>
                                                                                    </Trigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBox.Style>
                                                                    </TextBox>
                                                                    
                                    <!-- Overlay Button for "+" -->
                                    <Button Content="+" Background="Transparent" Foreground="{DynamicResource TertiaryForegroundBrush}" BorderThickness="0"
                                            IsHitTestVisible="True" FontSize="16" FontWeight="Bold"
                                            Click="SharesPlusButton_Click">
                                        <Button.Style>
                                                                            <Style TargetType="Button">
                                                                                <Setter Property="Visibility" Value="{Binding Shares, Converter={StaticResource InverseDoubleToVis}}"/>
                                                                                <Setter Property="Template">
                                                                                    <Setter.Value>
                                                                                        <ControlTemplate TargetType="Button">
                                                                                            <Grid Background="Transparent">
                                                                                                <TextBlock x:Name="PlusText" Text="+" 
                                                                                                           FontSize="16" FontWeight="Bold" 
                                                                                                           Foreground="{TemplateBinding Foreground}"
                                                                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                            </Grid>
                                                                                            <ControlTemplate.Triggers>
                                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsMouseOver}" Value="True">
                                                                                                    <Setter TargetName="PlusText" Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                                                                                    <Setter TargetName="PlusText" Property="Effect">
                                                                                                        <Setter.Value>
                                                                                                            <DropShadowEffect Color="#007ACC" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                                                                                        </Setter.Value>
                                                                                                    </Setter>
                                                                                                </DataTrigger>
                                                                                            </ControlTemplate.Triggers>
                                                                                        </ControlTemplate>
                                                                                    </Setter.Value>
                                                                                </Setter>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding ElementName=SharesBox, Path=IsFocused}" Value="True">
                                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Button.Style>
                                                                    </Button>
                                                                </Grid>

                                                                <!-- Market Value -->
                                                                <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="{Binding MarketValue, StringFormat=C2}" 
                                                                           Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                                                                <!-- Day Change Value -->
                                                                <TextBlock Grid.Column="2" Margin="10,0,0,0" Text="{Binding DayChangeValue, StringFormat={}{0:+$#,##0.00;-$#,##0.00;$0.00}}" 
                                                                           FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                                    <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                            </Grid>
                                                        </Grid>

                                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" HorizontalAlignment="Right" FontSize="13"/>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                <Border CornerRadius="3" Padding="3,0">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Setter Property="Background" Value="{DynamicResource NegativeBackgroundBrush}"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                                    <Setter Property="Background" Value="{DynamicResource PositiveBackgroundBrush}"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                    <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#,##0.00;-#,##0.00;0.00}%}" FontSize="10" FontWeight="Bold">
                                                                        <TextBlock.Style>
                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                                        <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
                                                                </Border>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </Grid>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsMouseOver}" Value="True">
                                                        <Setter TargetName="DeleteBtn" Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </ScrollViewer>
                            </Grid>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </Grid>

            <!-- Pinning Tooltip -->
            <Popup x:Name="PinningTooltip" Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="8,4" Margin="0,5,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock Text="Window Pinned" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="12"/>
                </Border>
            </Popup>

            <!-- Graph Tooltip -->
            <Popup x:Name="GraphTooltip" Placement="Mouse" StaysOpen="True" AllowsTransparency="True" IsHitTestVisible="False">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6,3" Margin="10,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TooltipPrice" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" Margin="0,0,5,0" Style="{StaticResource TooltipTextStyle}"/>
                            <TextBlock x:Name="TooltipPercent" FontWeight="Bold" Style="{StaticResource TooltipTextStyle}"/>
                        </StackPanel>
                        <TextBlock x:Name="TooltipTime" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="10" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Pie Tooltip -->
            <Popup x:Name="PieTooltip" Placement="Mouse" StaysOpen="True" AllowsTransparency="True" IsHitTestVisible="False">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6,3" Margin="10,0,0,10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <TextBlock x:Name="PieTooltipText" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="12"/>
                </Border>
            </Popup>

            <!-- News Popup -->
            <Popup x:Name="NewsPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="NewsPopup_MouseEnter" MouseLeave="NewsPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="6" Margin="10,0,0,0" MaxWidth="320">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <ItemsControl ItemsSource="{Binding NewsItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource SeparatorBrush}">
                                    <Border.Margin>
                                        <MultiBinding Converter="{StaticResource NewsItemSpacingConverter}">
                                            <Binding Path="."/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Border.Margin>
                                    <Border.Padding>
                                        <MultiBinding Converter="{StaticResource NewsItemSpacingConverter}">
                                            <Binding Path="."/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Border.Padding>
                                    <Border.BorderThickness>
                                        <MultiBinding Converter="{StaticResource NewsItemBorderConverter}">
                                            <Binding Path="."/>
                                            <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ItemsSource"/>
                                        </MultiBinding>
                                    </Border.BorderThickness>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Image -->
                                        <Border Grid.Column="0" Width="60" Height="60" CornerRadius="4" Margin="0,0,8,0" 
                                                Visibility="{Binding ImageUrl, Converter={StaticResource StringToVisibilityConverter}}">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ImageSource}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>

                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Title -->
                                            <TextBlock Grid.Row="0" Text="{Binding Title}" FontWeight="Bold" TextWrapping="Wrap" FontSize="12" Margin="0,0,0,2"
                                                       Foreground="{DynamicResource PrimaryForegroundBrush}"/>

                                            <!-- Source -->
                                            <TextBlock Grid.Row="1" Text="{Binding Source}" HorizontalAlignment="Right" FontSize="9" 
                                                       Foreground="{DynamicResource TertiaryForegroundBrush}" Margin="0,2,0,0"/>
                                        </Grid>
                                        
                                        <!-- Click Area -->
                                        <Grid Grid.ColumnSpan="2" Background="Transparent" Cursor="Hand">
                                            <Grid.InputBindings>
                                                <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OpenNewsCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Url}"/>
                                            </Grid.InputBindings>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Popup>

            <!-- Earnings Popup -->
            <Popup x:Name="EarningsPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="EarningsPopup_MouseEnter" MouseLeave="EarningsPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10" Margin="10,0,0,0" MaxWidth="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding EarningsMessage}" TextWrapping="Wrap" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                        <TextBlock Text="{Binding EarningsSignalStrengthDisplay, StringFormat='Signal Strength: {0}/10'}" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" FontStyle="Italic" Margin="0,8,0,0"
                                   Visibility="{Binding EarningsStatus, Converter={StaticResource EarningsStatusVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Options Popup -->
            <Popup x:Name="OptionsPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="OptionsPopup_MouseEnter" MouseLeave="OptionsPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10" Margin="10,0,0,0" MaxWidth="300">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Options Market Structure" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,0,8"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Max Pain:" Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MaxPainPrice, StringFormat=C2}" Foreground="{Binding MaxPainColor}" FontWeight="SemiBold" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Net Flow:" Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,10,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding NetFlowDisplay}" Foreground="{Binding NetFlowColor}" FontWeight="SemiBold" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Gamma Risk:" Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,10,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding GammaRiskDisplay}" Foreground="{Binding GammaRiskColor}" FontWeight="SemiBold" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Impact Date:" Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,10,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding OptionsImpactDate, StringFormat=d}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="{Binding OptionsSummary}" TextWrapping="Wrap" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Insider Popup -->
            <Popup x:Name="InsiderPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="InsiderPopup_MouseEnter" MouseLeave="InsiderPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10" Margin="10,0,0,0" MaxWidth="350">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Institutional/Insider Activity" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,0,8"/>
                        
                        <ItemsControl ItemsSource="{Binding InsiderTransactions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding DateDisplay}" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Person}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="11" TextTrimming="CharacterEllipsis" Margin="5,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding TransactionType}" Foreground="{Binding Color}" FontSize="11" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="3" Text="{Binding ValueDisplay}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="11" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="{Binding InsiderSentiment, StringFormat='Net Insider Sentiment: {0}'}" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" FontStyle="Italic" Margin="0,8,0,0"/>
                        <TextBlock Text="{Binding InsiderSignalStrengthDisplay, StringFormat='Signal Strength: {0}/10'}" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" FontStyle="Italic" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- RVOL Popup -->
            <Popup x:Name="RVolPopup" Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                   MouseEnter="RVolPopup_MouseEnter" MouseLeave="RVolPopup_MouseLeave">
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="10" Margin="10,0,0,0" MaxWidth="250">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Momentum and Volume" FontWeight="Bold" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="RVOL: " Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="14"/>
                            <TextBlock Text="{Binding RVOLDisplay}" Foreground="{DynamicResource PrimaryForegroundBrush}" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Vol:" Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,10,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentVolume, StringFormat=N0}" Foreground="{DynamicResource PrimaryForegroundBrush}" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Avg Vol (Time):" Foreground="{DynamicResource SecondaryForegroundBrush}" Margin="0,0,10,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AverageVolumeByTimeOfDay, StringFormat=N0}" Foreground="{DynamicResource PrimaryForegroundBrush}" HorizontalAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="High relative volume indicates institutional participation validating the price move." 
                                   TextWrapping="Wrap" Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" FontStyle="Italic"/>
                        <TextBlock Text="{Binding RVolSignalStrengthDisplay, StringFormat='Signal Strength: {0}/10'}" 
                                   Foreground="{DynamicResource SecondaryForegroundBrush}" FontSize="11" FontStyle="Italic" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- Footer with Status Bar and Add Stock -->
            <Grid Grid.Row="4" Margin="15,3,15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Status Bar -->
                    <TextBlock Grid.Row="0" Text="{Binding StatusMessage}" 
                             Foreground="{DynamicResource TertiaryForegroundBrush}" 
                             FontSize="10" Margin="0,0,0,5"
                             TextTrimming="CharacterEllipsis"/>

                    <!-- Add Stock UI -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="SearchBox" Text="{Binding NewSymbol, UpdateSourceTrigger=PropertyChanged}" 
                                 Background="{DynamicResource SearchBoxBackgroundBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}" BorderThickness="0" Padding="5" 
                                 VerticalContentAlignment="Center" Tag="Add Symbol..."
                                 LostFocus="SearchBox_LostFocus"/>
                        
                        <Popup IsOpen="{Binding IsSearchPopupOpen}" PlacementTarget="{Binding ElementName=SearchBox}" 
                               StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
                            <Border Background="{DynamicResource SearchPopupBackgroundBrush}" BorderBrush="{DynamicResource SearchPopupBorderBrush}" BorderThickness="1" CornerRadius="4" MaxHeight="200" Width="{Binding ElementName=SearchBox, Path=ActualWidth}">
                                <ListView ItemsSource="{Binding SearchResults}" Background="Transparent" BorderThickness="0">
                                    <ListView.Resources>
                                        <Style TargetType="{x:Type ScrollViewer}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                                                        <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="*"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" Grid.Row="0"/>
                                                            <ScrollBar x:Name="PART_VerticalScrollBar" AutomationProperties.AutomationId="VerticalScrollBar" Cursor="Arrow" Grid.Column="1" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Grid.Row="0" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportHeight}" Style="{StaticResource NarrowScrollBarStyle}" Width="4" MinWidth="0" MaxWidth="4"/>
                                                            <ScrollBar x:Name="PART_HorizontalScrollBar" AutomationProperties.AutomationId="HorizontalScrollBar" Cursor="Arrow" Grid.Column="0" Maximum="{TemplateBinding ScrollableWidth}" Minimum="0" Orientation="Horizontal" Grid.Row="1" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}" Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}" ViewportSize="{TemplateBinding ViewportWidth}" Style="{StaticResource NarrowScrollBarStyle}" Height="4" MinHeight="0" MaxHeight="4"/>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.Resources>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding DisplayText}" Foreground="{DynamicResource PrimaryForegroundBrush}"/>
                                                    
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0" 
                                                                Visibility="{Binding Price, Converter={StaticResource DoubleToVis}}">
                                                        <TextBlock Text="{Binding Price, StringFormat=C2}" Foreground="{DynamicResource PrimaryForegroundBrush}" Margin="0,0,5,0"/>
                                                        <TextBlock Text="{Binding ChangePercent, StringFormat={}{0:+#.00;-#.00;0.00}%}" FontWeight="Bold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="{DynamicResource NegativeColorBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsUp}" Value="True">
                                                                            <Setter Property="Foreground" Value="{DynamicResource PositiveColorBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border Background="{TemplateBinding Background}" Padding="2">
                                                            <ContentPresenter/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource ControlMouseOverBrush}"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown"/>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Border>
                        </Popup>

                        <Button Grid.Column="1" Command="{Binding AddStockCommand}" Content="+" 
                                Background="{DynamicResource ControlBorderBrush}" Foreground="{DynamicResource PrimaryForegroundBrush}" BorderThickness="0" Width="30" Margin="5,0,0,0"/>
                    </Grid>
                </Grid>
            </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
